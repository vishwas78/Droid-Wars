<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/target_pager_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">


        <ImageView
            android:id="@+id/edit_image"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="false"
            android:background="#777"
            android:maxHeight="75dp"
            android:maxWidth="75dp"
            android:src="@android:drawable/sym_def_app_icon"
            android:clickable="true"/>

        <TextView
            android:id="@+id/target_name_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_image"
            android:gravity="center"
            android:padding="5dp"
            android:text="Name"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/edit_house"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/target_name_textView"
            android:layout_centerHorizontal="true"
            android:text="House"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/pager_separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/edit_house"
            android:layout_marginTop="15dp"
            android:background="#aaa" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pager_separator"
            android:orientation="vertical">


            <TextView
                android:id="@+id/status_textView"
                style="@style/Info_info_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Not Killed"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="25dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="7dp"
                android:background="#aaa" />


            <LinearLayout
                android:id="@+id/infoPhoneNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    style="@style/Info_fields_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reason"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/reason_textView"
                    style="@style/Info_info_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textSize="20dp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#aaa" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    style="@style/Info_fields_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Killing  Place"
                    android:textIsSelectable="false"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/kill_place_textView"
                    style="@style/Info_info_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Not Yet"
                    android:textSize="20dp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#aaa" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    style="@style/Info_fields_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Killing  Method"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/kill_way_textView"
                    style="@style/Info_info_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Not Yet"
                    android:textSize="20dp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#aaa" />

        </LinearLayout>


    </RelativeLayout>



